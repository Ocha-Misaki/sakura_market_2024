.container
  .fs-2.page-title 注文履歴一覧
  %table.table.table-striped.table-hover.text-center.w-90{'data-test-id': "order-table"}
    %thead
      %tr
        %th{scope:"col"}ID
        %th{scope:"col"}注文日時
        %th{scope:"col"}注文金額
        %th{scope:"col"}配送日時
        %th{scope:"col"}宛名
        %th{scope:"col"}宛先住所
        %th
    %tbody
      - @orders.each do |order|
        %tr
          %td= order.id
          %td= l order.created_at
          %td= number_to_currency(order.total_price_including_tax)
          %td= delivery_at_text(order)
          %td= order.order_name
          %td= order.order_address
          %td= link_to '詳細', order_path(order), class: "link-primary text-decoration-none"
  = paginate @orders, theme: 'twitter-bootstrap-4'
